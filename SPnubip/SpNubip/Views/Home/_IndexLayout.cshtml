@using SpNubip.Models
@model DataForIndexLayout
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    
    <div class="page-banner-content">
       
        <ol class="breadcrumb">
              <li class="active">Головна</li>
        </ol>
    </div>
    

    <div class="row  row-offcanvas row-offcanvas">
        <div class="pull-right col-xs-12 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
            <div class="list-group">
                <a href="@Url.Action("MainPage", "Home")"  class="list-group-item">Головна</a>
                <a href="@Url.Action("Mission", "Home")" class="list-group-item">Місія</a>
                <a href="@Url.Action("Potential", "Home")" class="list-group-item">Переваги участі</a>
                <a href="@Url.Action("Partners", "Home")" class="list-group-item">Партнери</a>
                <a href="@Url.Action("Leaders", "Home")" class="list-group-item">Керівництво</a>
                <a href="@Url.Action("Contact", "Home")" class="list-group-item">Контакти</a>
                
            </div>
        </div><!--/span-->


        <div class="pull-left col-xs-12 col-sm-9 ">
            <p class="pull-left visible-xs">
                <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
            </p>
            <div  style="padding-top: 20px; padding-bottom: 20px">
                
                @RenderBody()
            </div>
        
            <div class="pull-right col-xs-12 col-sm-3 sidebar-offcanvas">
           
                <!--Слайдер-->
                <script src="/Scripts/jquery-1.11.3.min.js" type="text/javascript"></script>
                <script src="/Scripts/jssor.slider-22.0.6.mini.js" type="text/javascript"></script>

                <script src="/Scripts/ForSlider.js" type="text/javascript"></script>



                <div id="jssor_1" style="position:relative;margin:0 auto;top:0px;left:0px;width:600px;height:300px;overflow:hidden;visibility:hidden;">
                    <!-- Loading Screen -->

                    <div data-u="loading" style="position:absolute;top:0px;left:0px;background-color:rgba(0,0,0,0.7);">
                        <div style="filter: alpha(opacity=70); opacity: 0.7; position: absolute; display: block; top: 0px; left: 0px; width: 100%; height: 100%;"></div>
                        <div style="position:absolute;display:block;background:url('img/loading.gif') no-repeat center center;top:0px;left:0px;width:100%;height:100%;"></div>
                    </div>

                    <div data-u="slides" style="cursor:default;position:relative;top:0px;left:0px;width:600px;height:300px;overflow:hidden;">
                      
                         @foreach (var news in Model.news)
                        {
                            <div>
                                <a href="/Home/PageWithNew/@news.ID_News">  <img data-u="image" src="@news.Img" /></a>
                                <div data-u="thumb">@news.Title</div>
                            </div>

                        }

                        <a data-u="any" href="http://www.jssor.com" style="display:none">Banner Slider</a>
                    </div>

                    <!-- Thumbnail Navigator -->
                    <div data-u="thumbnavigator" class="jssort09-600-45" style="position:absolute;bottom:0px;left:0px;width:600px;height:45px;">
                        <div style="position:absolute;top:0;left:0;width:100%;height:100%;background-color:#000;filter:alpha(opacity=40.0);opacity:0.4;"></div>
                        <!-- Thumbnail Item Skin Begin -->
                        <div data-u="slides" style="cursor: default;">
                            <div data-u="prototype" class="p">
                                <div data-u="thumbnailtemplate" class="t"></div>
                            </div>
                        </div>
                        <!-- Thumbnail Item Skin End -->
                    </div>

                    <!-- Bullet Navigator -->
                    @*<div data-u="navigator" class="jssorb01" style="bottom:16px;right:16px;">
                <div data-u="prototype" style="width:12px;height:12px;"></div>
            </div>*@
                    <!-- Arrow Navigator -->
                    <span data-u="arrowleft" class="jssora05l" style="top:0px;left:8px;width:40px;height:40px;" data-autocenter="2"></span>
                    <span data-u="arrowright" class="jssora05r" style="top:0px;right:8px;width:40px;height:40px;" data-autocenter="2"></span>
                </div>
                <!--end slider-->


            </div>
        


            <div class="row">
                <div class="col-6 col-sm-6 col-lg-6">
                    <h2>Sharing of ideas</h2>
                    <p>
                        In Europe, Pierre Laffitte, the mastermind and founder of Sophia Antipolis Science Park in France,
                        described the concept of cross fertilization as the interchange between different cultures or
                        different ways of thinking that is mutually productive and beneficial; "the cross-fertilization
                        of science and the creative arts" not only in terms of economic, but also on a social and cultural level.
                    </p>
                    <p><a class="btn btn-default" href="http://google.com/">Any link &raquo;</a></p>
                    
                </div><!--/span-->
                <div class="col-6 col-sm-6 col-lg-6">
                    <h2>Cтартап школа</h2>
                    <p>24 лютого 2017 року в університеті за ініціативи Наукового парку НУБіП «Стале природокористування та якість життя» відбулась зустріч-дискусія «Стартап – це процес, який ідею перетворює на успішний бізнес».</p>
                    <p><a class="btn btn-default" href="/Home/StartapSckool.cshtml" role="button">Більше інформації &raquo;</a></p>
                </div><!--/span-->
              </div><!--/row-->
        </div><!--/span-->

        
    </div>
</div>
